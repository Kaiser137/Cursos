programa {
  funcao inicio() {
    real base
    real altura
    real area

    escreva("Digite o tamanho da base do triangulo: ")
    leia(base)

    escreva("Digite o tamanho da altura do triangulo: ")
    leia(altura)

    area = (base * altura) / 2

    escreva("A area do triangulo eh: ", area)
  }
}
